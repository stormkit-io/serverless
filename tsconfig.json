{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "lib": ["es6"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
