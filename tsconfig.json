{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
