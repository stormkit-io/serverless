{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6"],
      "module": "commonjs",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "paths": {
        "~/*": ["./src/*"]
      }
    }
  }
  